<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory app:title="Basic">

		<ListPreference
			app:entries="@array/theme_entries"
			app:entryValues="@array/theme_values"
			app:key="theme"
			app:title="Theme" />

		<EditTextPreference
			app:key="rootPath"
			app:title="Root Path" />

		<EditTextPreference
			app:key="userAgentCustom"
			app:title="Custom User Agent" />

		<ListPreference
			app:entries="@array/userAgents_entries"
			app:entryValues="@array/userAgents_values"
			app:key="userAgentDefaults"
			app:title="Default User Agents" />

		<EditTextPreference
			app:defaultValue="3000"
			app:key="webTimeoutDuration"
			app:title="Max Web TimeOut in ms" />

	</PreferenceCategory>

</PreferenceScreen>